@model CourseRegistration.Models.RegistrationSheet

@{
    ViewData["Title"] = "Delete";
}

<h1>Remove Student</h1>

<h3>Are you sure you want to remove this student?</h3>
<div>
    <br />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="List" asp-route-courseid="@ViewBag.CourseId" style="margin-left: 20px">Back to List</a>
    </form>
</div>
